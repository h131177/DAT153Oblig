<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_layoutheight"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textView2"
        android:textSize="@dimen/list_item_textsize"
        android:padding="@dimen/list_item_padding"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="match_parent"
        android:text="Element"></TextView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/list_item_imagewidth"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/list_item_width"
        tools:srcCompat="@tools:sample/avatars" />

</FrameLayout>